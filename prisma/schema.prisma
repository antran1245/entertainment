// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id  Int @id @default(autoincrement())
  email String @unique
  password String
  bookmarks Bookmark[]
}

model Bookmark {
  id  Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  title String
  year Int
  category String
}